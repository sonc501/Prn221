@page
@model CourseManager.Pages.Majors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Major</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Major.Name" class="control-label"></label>
                <input asp-for="Major.Name" class="form-control" />
                <span asp-validation-for="Major.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.Desciption" class="control-label"></label>
                <input asp-for="Major.Desciption" class="form-control" />
                <span asp-validation-for="Major.Desciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major.Status" class="control-label"></label>
                <select asp-for="Major.Status"class="form-select" asp-items="Html.GetEnumSelectList<BaseStatus>()"></select>
                <span asp-validation-for="Major.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
