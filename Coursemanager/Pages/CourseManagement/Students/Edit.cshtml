@page
@model CourseManager.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Code" class="control-label"></label>
                <input asp-for="Student.Code" class="form-control" />
                <span asp-validation-for="Student.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Address" class="control-label"></label>
                <input asp-for="Student.Address" class="form-control" />
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.EnrollDate" class="control-label"></label>
                <input asp-for="Student.EnrollDate" class="form-control" />
                <span asp-validation-for="Student.EnrollDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.MajorId" class="control-label"></label>
                <select asp-for="Student.MajorId" class="form-select" asp-items="ViewBag.MajorId"></select>
                <span asp-validation-for="Student.MajorId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.Status" class="control-label"></label>
                <select asp-for="Student.Status" class="form-select" asp-items="Html.GetEnumSelectList<BaseStatus>()"></select>
                <span asp-validation-for="Student.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
