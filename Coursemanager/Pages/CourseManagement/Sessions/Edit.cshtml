@page
@model CourseManager.Pages.Sessions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session.StartTime" class="control-label"></label>
                <input asp-for="Session.StartTime" class="form-control" />
                <span asp-validation-for="Session.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.EndTime" class="control-label"></label>
                <input asp-for="Session.EndTime" class="form-control" />
                <span asp-validation-for="Session.EndTime" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Session.CourseId" />
            <div class="form-group">
                <label asp-for="Session.RoomId" class="control-label"></label>
                <select asp-for="Session.RoomId" class="form-select" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Session.RoomId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Session.Id" />
            <div class="form-group">
                <label asp-for="Session.Status" class="control-label"></label>
                <select asp-for="Session.Status" class="form-select" asp-items="Html.GetEnumSelectList<BaseStatus>()"></select>
                <span asp-validation-for="Session.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-courseId="@Model.Session.CourseId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
